<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.miittech.you.weight.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_bell"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铃声"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:id="@+id/img_more1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Don’t cry"
            android:layout_toLeftOf="@+id/img_more1"
            android:lines="1"
            android:textSize="20dp"
            android:layout_marginRight="-10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_setting_lines"/>
    <RelativeLayout
        android:id="@+id/rl_vibrate"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="震动"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>
        <CheckBox
            android:id="@+id/check_vibrate"
            android:layout_width="53dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sl_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_setting_lines"/>
    <RelativeLayout
        android:id="@+id/rl_disconnect_reminder_time"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开提醒时长"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:id="@+id/img_more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_disconnect_reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="30s"
            android:layout_toLeftOf="@+id/img_more2"
            android:textSize="20dp"
            android:layout_marginRight="-10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机与“钱包”断开连接时响铃时长"
        android:layout_marginLeft="16dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_setting_lines"/>
    <RelativeLayout
        android:id="@+id/rl_disconnect_repeated_remind"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开重复提醒"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>
        <CheckBox
            android:id="@+id/check_disconnect_repeated_remind"
            android:layout_width="53dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sl_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锁屏时手机和“钱包”断开连接后多次提醒，解锁手机或打开APP即可停止提醒"
        android:layout_marginLeft="16dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_setting_lines"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_repeated_remind"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重连提醒"
            android:layout_toRightOf="@id/imageView1"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>
        <CheckBox
            android:id="@+id/check_repeated_remind"
            android:layout_width="53dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sl_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机与“钱包”重新连接时手机提醒"
        android:layout_marginLeft="16dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_setting_lines"/>
</LinearLayout>