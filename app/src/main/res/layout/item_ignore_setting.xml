<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <CheckBox
            android:id="@+id/item_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:visibility="gone"
            android:background="@drawable/sl_item_ignore_selected"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="公司"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_check"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_toLeftOf="@+id/item_flag"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/img_right2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/item_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="-10dp"
            android:layout_toLeftOf="@+id/img_right2"
            android:hint="未设置"
            android:textColorHint="@color/input_hint"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"/>
    </RelativeLayout>
</LinearLayout>