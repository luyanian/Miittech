<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.miittech.you.weight.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="30dp">

        <com.miittech.you.weight.CircleImageView
            android:id="@+id/img_device_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_header_img"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"/>
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_device_icon"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:text="不吃鱼的猫"
            android:layout_marginTop="5dp"
            android:textSize="22dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/tv_device_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="第四大街67号，滨海新区"
            android:layout_below="@+id/tv_device_name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/tv_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="5分钟以前"
            android:layout_below="@+id/tv_device_name"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="#939393"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择铃声"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#6d6d6d"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>

</LinearLayout>