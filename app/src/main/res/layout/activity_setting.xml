<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.miittech.you.weight.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#FFFAFAFA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_user_top"
                    android:orientation="vertical"
                    android:padding="30dp"/>
                <LinearLayout
                    android:id="@+id/ll_user_top"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/ic_user_top"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:gravity="center_horizontal">

                    <com.miittech.you.weight.CircleImageView
                        android:id="@+id/user_header_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_header_img"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="@string/text_click_to_edit_user"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/ll_user_top">
                    <RelativeLayout
                        android:id="@+id/btn_setting_myfriends"
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_user_item"
                        android:layout_height="70dp">
                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_setting_myfriends"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_setting_myfriends"
                            android:layout_toRightOf="@id/imageView1"
                            android:layout_centerVertical="true"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="16dp"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_setting_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_user_item"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/btn_setting_ignore"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_ignore"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_setting_ignore"
                                android:layout_toRightOf="@id/imageView2"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_service"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_service"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_setting_service"
                                android:layout_toRightOf="@id/imageView3"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/ic_user_item">
                        <RelativeLayout
                            android:id="@+id/btn_setting_star"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_star"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_setting_star"
                                android:layout_toRightOf="@id/imageView4"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="80dp"
                            android:visibility="gone"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_shop"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_shop"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_setting_shop"
                                android:layout_toRightOf="@id/imageView5"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="80dp"
                            android:visibility="gone"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_readme"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_readme"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_setting_readme"
                                android:layout_toRightOf="@id/imageView6"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:visibility="gone"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_feedbak"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_email"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="意见反馈"
                                android:layout_toRightOf="@id/imageView8"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setting_help"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关于我们"
                                android:layout_toRightOf="@id/imageView9"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/bg_setting_lines"/>
                        <RelativeLayout
                            android:id="@+id/btn_setting_check_version"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_update"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="版本更新"
                                android:layout_toRightOf="@id/imageView10"
                                android:layout_centerVertical="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:id="@+id/img_row"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_setting_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"/>
                            <TextView
                                android:id="@+id/tv_cur_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前版本v1.0"
                                android:layout_toLeftOf="@id/img_row"
                                android:layout_centerVertical="true"
                                android:textSize="14dp"
                                android:textColor="@color/input_hint"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>