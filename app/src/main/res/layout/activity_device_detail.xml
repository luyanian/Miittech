<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.miittech.you.weight.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_battarry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:text="剩余电量 20%"/>

        <com.miittech.you.weight.CircleImageView
            android:id="@+id/img_device_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_header_img"
            app:civ_border_color="@color/white"
            android:layout_marginTop="10dp"
            app:civ_border_width="2dp"/>
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_device_icon"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:text="不吃鱼的猫"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_device_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="第四大街67号，滨海新区"
            android:layout_below="@+id/tv_device_name"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="5分钟以前"
            android:layout_below="@+id/tv_device_name"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:id="@+id/rl_bell_status"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_corner_device_diconnect">

            <ImageView
                android:id="@+id/img_find_butten"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_device_find"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </LinearLayout>
    <com.miittech.you.weight.TypeSelector
        android:id="@+id/typeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/bg_lines"/>
    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_tip_click_to_bell"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击寻找让贴片发声，来寻找它"
            android:layout_marginTop="10dp"
            android:textColor="#323232"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/btn_option_map"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地图"
                android:layout_toRightOf="@id/imageView1"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_setting_lines"/>
        <RelativeLayout
            android:id="@+id/btn_option_share"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:layout_toRightOf="@id/imageView1"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_setting_lines"/>
        <RelativeLayout
            android:id="@+id/btn_option_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_toRightOf="@id/imageView1"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_setting_lines"/>
        <RelativeLayout
            android:id="@+id/btn_option_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_toRightOf="@id/imageView1"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_setting_lines"/>
    </LinearLayout>
</LinearLayout>